<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/lay_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <include layout="@layout/tag_wait" />
            <LinearLayout
                android:id="@+id/selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    style="@style/TextAppearance.AppCompat.Small" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:id="@+id/select_reader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_reader_grey_60dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/network_reader" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/network_or"
                        style="@style/TextAppearance.AppCompat.Small" />
                    <LinearLayout
                        android:id="@+id/select_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_tag_grey_60dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/network_tag" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Privacy-friendly overlay (hides technical logs by default) -->
    <FrameLayout
        android:id="@+id/lay_privacy_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/windowBackground"
        android:visibility="gone">

        <de.tu_darmstadt.seemoo.nfcgate.gui.component.MatrixRainView
            android:id="@+id/matrix_rain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lay_privacy_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/img_privacy_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_nfc_grey_42dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/txt_privacy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/network_privacy_title"
                style="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txt_privacy_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/network_privacy_subtitle"
                style="@style/TextAppearance.AppCompat.Small" />

            <ProgressBar
                android:id="@+id/prg_privacy_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:indeterminate="true" />

            <TextView
                android:id="@+id/txt_privacy_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/network_privacy_hint"
                style="@style/TextAppearance.AppCompat.Caption" />
        </LinearLayout>
    </FrameLayout>

    <!-- Small toggle shown when overlay is hidden -->
    <TextView
        android:id="@+id/btn_privacy_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="?android:attr/selectableItemBackground"
        android:padding="12dp"
        android:text="@string/network_privacy_toggle"
        style="@style/TextAppearance.AppCompat.Caption"
        android:visibility="gone" />

</FrameLayout>
